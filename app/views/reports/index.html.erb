<h1>Listing reports</h1>

<table>
  <tr>
    <th>Note record</th>
    <th>Entry date</th>
    <th>Author name</th>
    <th>Author email</th>
    <th>Author phone</th>
    <th>Source date</th>
    <th>Found</th>
    <th>Email of found</th>
    <th>Phone of found</th>
    <th>Laset known location</th>
    <th>Text</th>
  </tr>

<% for report in @reports %>
  <tr>
    <td><%=h report.note_record_id %></td>
    <td><%=h report.entry_date %></td>
    <td><%=h report.author_name %></td>
    <td><%=h report.author_email %></td>
    <td><%=h report.author_phone %></td>
    <td><%=h report.source_date %></td>
    <td><%=h report.found %></td>
    <td><%=h report.email_of_found %></td>
    <td><%=h report.phone_of_found %></td>
    <td><%=h report.laset_known_location %></td>
    <td><%=h report.text %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

