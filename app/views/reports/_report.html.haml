.update{:id => "report_#{report.id}"}
  .actions
    - form_remote_tag :url => up_report_votes_path(report) do
      = image_submit_tag('btn_report_crisis.gif', :alt => 'Report Crisis')
    .notacrisis
      = link_to_remote('Not a crisis', :url=> down_report_votes_path(report))
    .votes
      = "#{pluralize report.upvotes_counter, "upvote"}, #{pluralize report.downvotes_counter, "downvote"}"


  %img{:src => report.user_profile_image_url, :style => "overflow:auto;" }
  = link_to "@#{report.user}", "http://twitter.com/#{report.user}", :class => 'username'
  = format_status_message report.content
  .timestamp
    = report.created_at
