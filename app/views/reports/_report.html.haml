.update
  .actions
    - form_tag(upvote_report_path(report), :method => :put) do
      = image_submit_tag('btn_report_crisis.gif', :alt => 'Report Crisis')
    .notacrisis
      = link_to_remote('Not a crisis', :url=>downvote_report_path(report), :method => :put)
    .votes
      = "#{report.upvotes} upvotes, #{report.downvotes} downvotes"


  %img{:src => report.user_profile_image_url, :style => "overflow:auto;" }
  = link_to "@#{report.user}", "http://twitter.com/#{report.user}", :class => 'username'
  = format_status_message report.content
  .timestamp
    = report.created_at
